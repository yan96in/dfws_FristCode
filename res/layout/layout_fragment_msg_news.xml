<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
>
    
<RelativeLayout
        android:id="@+id/rela_sets_titlebar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/ic_head_bg_480_80"
        android:padding="6dip" >
        <TextView
            android:id="@+id/txt_sets_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/msg_news_title_hr"
            android:textColor="@color/white"
            android:textSize="@dimen/font_size_20" />

        

        <ImageView
            android:id="@+id/msg_news_return"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:background="@drawable/selector_keyword_submit_bg"/>
    </RelativeLayout>
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            

            <LinearLayout
                android:id="@+id/linear_reading_set"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/about_bg"
                android:orientation="vertical" >


                    <TextView
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="10dp"
                        android:id="@+id/txt_sets_font_size_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/font_size_14"
                        android:text="@string/msg_news_title_name"
                        android:textColor="@color/black" />


                <RelativeLayout
                    android:id="@+id/set_job_subscription"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                      <TextView
                        android:layout_marginLeft="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="@string/msg_news_title_email_name"
                        android:textColor="@color/black" />
                    <TextView
                        android:layout_marginLeft="65dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="@string/msg_news_title_email"
                        android:textColor="@color/image_bg" />
             
                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/set_job_subscription"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                      <TextView
                        android:layout_marginLeft="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="@string/msg_news_title_time_name"
                        android:textColor="@color/black" />
                    <TextView
                        android:layout_marginLeft="75dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="@string/msg_news_title_time"
                        android:textColor="@color/image_bg" />             
                </RelativeLayout>
            </LinearLayout>
            
            <LinearLayout
                android:id="@+id/linear_product_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical" >
                
                <TextView 
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/msg_news_title_content"
                    />
            </LinearLayout> 
                      
        </LinearLayout>
    
</LinearLayout>

<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >
     <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/ic_head_bg_480_80" >

        <ImageButton
            android:id="@id/goback"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:background="@drawable/selector_keyword_submit_bg"
            android:src="@drawable/ic_return__left"
            android:contentDescription="@string/app_name" />

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/myresume_intention_desired_salary"
            android:textColor="@color/white"
            android:textSize="20sp" />

        <Button
            android:id="@+id/btn_save"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:background="@drawable/selector_keyword_submit_bg"
            android:text="@string/more_job_submit"
            android:textColor="@color/white"
            android:textSize="16sp"/>
    </RelativeLayout>

     
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fadingEdgeLength="0dp"
        android:padding="8dp"
        android:scrollbars="@null" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <LinearLayout
                android:id="@+id/rela_salary_mode"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/selector_item_bg"
                android:paddingBottom="10dp"
                android:paddingTop="10dp" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
					android:layout_gravity="center_vertical"
                    android:drawableLeft="@drawable/ic_necessary_13_12"
                    android:drawablePadding="3dp"
                    android:text="@string/myresume_intention_salary_mode"
                    android:textColor="@color/black"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/txt_salary_mode"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical|right"
                    android:drawablePadding="10dp"
                    android:drawableRight="@drawable/ic_function_next_20_36"
                    android:gravity="center_vertical|right"
                    android:text="空"
                    android:textColor="@color/gray_deep2"
                    android:textSize="14sp" />
            </LinearLayout>

            <include
                android:layout_width="match_parent"
                android:layout_height="0.3dp"
                layout="@layout/layout_line" />

            <LinearLayout
                android:id="@+id/rela_salary_currency"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/selector_item_bg"
                android:paddingBottom="10dp"
                android:paddingTop="10dp" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:drawableLeft="@drawable/ic_necessary_13_12"
                    android:drawablePadding="3dp"
                    android:text="@string/myresume_intention_salary_currency"
                    android:textColor="@color/black"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/txt_salary_currency"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical|right"
                    android:drawablePadding="10dp"
                    android:drawableRight="@drawable/ic_function_next_20_36"
                    android:gravity="center_vertical|right"
                    android:text="空"
                    android:textColor="@color/gray_deep2"
                    android:textSize="14sp" />
            </LinearLayout>

            <include
                android:layout_width="match_parent"
                android:layout_height="0.3dp"
                layout="@layout/layout_line" />

            <LinearLayout
                android:id="@+id/rela_salary_scope"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/selector_item_bg"
                android:paddingBottom="10dp"
                android:paddingTop="10dp" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:drawableLeft="@drawable/ic_necessary_13_12"
                    android:drawablePadding="3dp"
                    android:text="@string/myresume_intention_salary_scope"
                    android:textColor="@color/black"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/txt_salary_scope"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical|right"
                    android:singleLine="true"
                    android:ellipsize="end"
                    android:drawablePadding="10dp"
                    android:drawableRight="@drawable/ic_function_next_20_36"
                    android:gravity="center_vertical|right"
                    android:text="空"
                    android:textColor="@color/gray_deep2"
                    android:textSize="14sp" />
            </LinearLayout>
            
            <include
                android:layout_width="match_parent"
                android:layout_height="0.3dp"
                layout="@layout/layout_line" />
            
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginTop="20dp"
                android:paddingBottom="10dp"
                android:paddingTop="10dp" >

                <CheckBox
                    android:id="@+id/cbx"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:button="@null"
                    android:background="@null"
                    android:drawableRight="@drawable/selector_position_cbx_bg"
                    android:drawablePadding="5dp"
                    android:text="@string/is_show"
                    android:textColor="@color/black"
                    android:textSize="14sp" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>

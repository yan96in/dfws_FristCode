<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/rela_sets_titlebar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/ic_head_bg_480_80">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="修改密码"
            android:textColor="@color/white"
            android:textSize="20dp" />

        <Button
            android:id="@+id/txt_more_push_submite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/selector_keyword_submit_bg"
            android:text="@string/more_submits"
            android:textColor="@color/white"
            android:textSize="20dp"
            android:visibility="gone" />

        <ImageButton
            android:id="@+id/pass_return"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:background="@drawable/selector_keyword_submit_bg"
            android:src="@drawable/ic_return__left" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="10dp" >

        <EditText
            android:id="@+id/user_pass_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="5dp"
            android:digits="@string/check_login"
            android:gravity="left|center_vertical"
            android:hint="@string/ret_6"
            android:maxLength="31"
            android:textColor="@color/black"
            android:textSize="@dimen/font_size_14" />

        <EditText
            android:id="@+id/user_pass_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:digits="@string/check_login"
            android:gravity="left|center_vertical"
            android:hint="@string/ret_4"
            android:inputType="textPassword"
            android:maxLength="20"
            android:textColor="@color/black"
            android:textSize="@dimen/font_size_14" />

        <EditText
            android:id="@+id/user_pass_3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:digits="@string/check_login"
            android:gravity="left|center_vertical"
            android:hint="@string/ret_7"
            android:inputType="textPassword"
            android:maxLength="20"
            android:textColor="@color/black"
            android:textSize="@dimen/font_size_14" />

        <Button
            android:id="@+id/modify_pass_submit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dip"
            android:layout_marginRight="10dip"
            android:layout_marginTop="18dp"
            android:background="@drawable/selector_edu_add_bg"
            android:gravity="center_horizontal"
            android:paddingBottom="10dip"
            android:paddingTop="10dip"
            android:text="@string/more_submits"
            android:textColor="@color/white"
            android:textSize="@dimen/font_size_20" />
    </LinearLayout>

</LinearLayout>
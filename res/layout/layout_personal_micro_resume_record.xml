<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/ic_head_bg_480_80" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/txt_4"
            android:textColor="@color/white"
            android:textSize="20dp" />

        <Button
            android:id="@+id/txt_submite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/selector_keyword_submit_bg"
            android:text="@string/more_submits"
            android:textColor="@color/white"
            android:textSize="20dp" />

        <ImageButton
            android:id="@+id/micro_return"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:background="@drawable/selector_keyword_submit_bg"
            android:src="@drawable/ic_return__left" />
    </RelativeLayout>

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <RadioGroup
                android:id="@+id/readin_grop"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >

                <RadioButton
                    android:id="@+id/radb_1"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:button="@drawable/selector_search_cbx_bg"
                    android:padding="20dp"
                    android:paddingLeft="30dp"
                    android:text="@string/txt_6"
                    android:textColor="@color/black"
                    android:textSize="18sp" />

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="1dip"
                    android:background="@drawable/ic_view_item" />

                <RadioButton
                    android:id="@+id/radb_2"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:button="@drawable/selector_search_cbx_bg"
                    android:padding="20dp"
                    android:paddingLeft="30dp"
                    android:text="@string/txt_7"
                    android:textColor="@color/black"
                    android:textSize="18sp" />

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="1dip"
                    android:background="@drawable/ic_view_item" />

                <RadioButton
                    android:id="@+id/radb_3"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:button="@drawable/selector_search_cbx_bg"
                    android:padding="20dp"
                    android:paddingLeft="50dp"
                    android:text="中技"
                    android:textColor="@color/black"
                    android:textSize="18sp" />

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="1dip"
                    android:background="@drawable/ic_view_item" />

                <RadioButton
                    android:id="@+id/radb_4"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:button="@drawable/selector_search_cbx_bg"
                    android:padding="20dp"
                    android:paddingLeft="50dp"
                    android:text="中专"
                    android:textColor="@color/black"
                    android:textSize="18sp" />

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="1dip"
                    android:background="@drawable/ic_view_item" />

                <RadioButton
                    android:id="@+id/radb_5"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:button="@drawable/selector_search_cbx_bg"
                    android:padding="20dp"
                    android:paddingLeft="30dp"
                    android:text="@string/txt_8"
                    android:textColor="@color/black"
                    android:textSize="18sp" />

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="1dip"
                    android:background="@drawable/ic_view_item" />

                <RadioButton
                    android:id="@+id/radb_6"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:button="@drawable/selector_search_cbx_bg"
                    android:padding="20dp"
                    android:paddingLeft="30dp"
                    android:text="@string/txt_9"
                    android:textColor="@color/black"
                    android:textSize="18sp" />

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="1dip"
                    android:background="@drawable/ic_view_item" />

                <RadioButton
                    android:id="@+id/radb_7"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:button="@drawable/selector_search_cbx_bg"
                    android:padding="20dp"
                    android:paddingLeft="30dp"
                    android:text="@string/txt_10"
                    android:textColor="@color/black"
                    android:textSize="18sp" />

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="1dip"
                    android:background="@drawable/ic_view_item" />

                <RadioButton
                    android:id="@+id/radb_8"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:button="@drawable/selector_search_cbx_bg"
                    android:padding="20dp"
                    android:paddingLeft="30dp"
                    android:text="@string/txt_11"
                    android:textColor="@color/black"
                    android:textSize="18sp" />

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="1dip"
                    android:background="@drawable/ic_view_item" />
            </RadioGroup>
        </LinearLayout>
    </ScrollView>

</LinearLayout>
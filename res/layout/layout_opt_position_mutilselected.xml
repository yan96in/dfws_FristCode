<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/ic_head_bg_480_80" >

        <ImageButton
            android:id="@id/goback"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:background="@drawable/selector_keyword_submit_bg"
            android:contentDescription="@string/app_name"
            android:src="@drawable/ic_return__left" />

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/myresume_intention_position"
            android:textColor="@color/white"
            android:textSize="20sp" />

        <Button
            android:id="@+id/btn_save"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:background="@drawable/selector_keyword_submit_bg"
            android:text="@string/more_job_submit"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:visibility="visible" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <RelativeLayout 
            android:id="@+id/rela_selected"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_target_bg_480_60">
            <TextView
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_centerVertical="true"
	            android:padding="6dp"
	            android:text="@string/myresume_intention_position_selected"
	            android:textColor="@color/black"
	            android:textSize="14sp" />
            
            <TextView 
                android:id="@+id/txt_selected_num"
                android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_alignParentRight="true"
	            android:layout_centerVertical="true"
	            android:gravity="center_vertical"
	            android:drawablePadding="10dp"
	            android:drawableRight="@drawable/ic_select_up"
	            android:padding="6dp"
	            android:layout_marginRight="8dp"
	            android:text="0/5"
	            android:textColor="@color/black"
	            android:textSize="12sp"/>
        </RelativeLayout>
		<include 
		    layout="@layout/layout_line"
		    android:layout_width="match_parent"
		    android:layout_height="0.3dp"/>
        <LinearLayout
            android:id="@+id/linear_selected"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_selected_bg_200_20"
            android:orientation="vertical" 
            android:visibility="gone">
        </LinearLayout>
    </LinearLayout>
    
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <ScrollView
            android:id="@+id/scroll_page_main"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fadingEdgeLength="0dp"
            android:scrollbars="@null" >

            <LinearLayout
                android:id="@+id/linear_main"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical" >
            </LinearLayout>
        </ScrollView>

        <ScrollView
            android:id="@+id/scroll_page_sub"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fadingEdgeLength="0dp"
            android:scrollbars="@null"
            android:visibility="gone" >

            <LinearLayout
                android:id="@+id/linear_sub"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical" >
            </LinearLayout>
        </ScrollView>
    </FrameLayout>
</LinearLayout>

<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/ic_head_bg_480_80" >

        <ImageButton
            android:id="@id/goback"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:background="@drawable/selector_keyword_submit_bg"
            android:src="@drawable/ic_return__left"
            android:contentDescription="@string/app_name" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/mycenter_myresume_job_favorite"
            android:textColor="@color/white"
            android:textSize="22sp" />

        <Button
            android:id="@+id/btn_save"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:background="@drawable/selector_keyword_submit_bg"
            android:text="@string/save"
            android:textColor="@color/white"
            android:textSize="16sp" />
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fadingEdgeLength="0dp"
        android:padding="8dp"
        android:scrollbars="@null" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <LinearLayout
                android:id="@+id/rela_jobfavorite_jobtype"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/selector_item_bg"
                android:paddingBottom="10dp"
                android:paddingTop="10dp" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
					android:layout_gravity="center_vertical"
                    android:drawableLeft="@drawable/ic_necessary_13_12"
                    android:drawablePadding="3dp"
                    android:text="@string/myresume_jobfavorite_jobtype"
                    android:textColor="@color/black"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/txt_jobfavorite_jobtype"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical|right"
                    android:drawablePadding="10dp"
                    android:drawableRight="@drawable/ic_function_next_20_36"
                    android:gravity="center_vertical|right"
                    android:text="空"
                    android:textColor="@color/gray_deep2"
                    android:textSize="14sp" />
            </LinearLayout>

            <include
                android:layout_width="match_parent"
                android:layout_height="0.3dp"
                layout="@layout/layout_line" />

            <LinearLayout
                android:id="@+id/rela_jobfavorite_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/selector_item_bg"
                android:paddingBottom="10dp"
                android:paddingTop="10dp" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:drawableLeft="@drawable/ic_necessary_13_12"
                    android:drawablePadding="3dp"
                    android:text="@string/myresume_jobfavorite_address"
                    android:textColor="@color/black"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/txt_jobfavorite_address"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical|right"
                    android:singleLine="true"
                    android:ellipsize="end"
                    android:drawablePadding="10dp"
                    android:drawableRight="@drawable/ic_function_next_20_36"
                    android:gravity="center_vertical|right"
                    android:text="空"
                    android:textColor="@color/gray_deep2"
                    android:textSize="14sp" />
            </LinearLayout>

            <include
                android:layout_width="match_parent"
                android:layout_height="0.3dp"
                layout="@layout/layout_line" />

            <LinearLayout
                android:id="@+id/rela_jobfavorite_favorite_position"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/selector_item_bg"
                android:paddingBottom="10dp"
                android:paddingTop="10dp" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:drawableLeft="@drawable/ic_necessary_13_12"
                    android:drawablePadding="3dp"
                    android:text="@string/myresume_jobfavorite_favorite_position"
                    android:textColor="@color/black"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/txt_jobfavorite_favorite_position"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical|right"
                    android:singleLine="true"
                    android:ellipsize="end"
                    android:drawablePadding="10dp"
                    android:drawableRight="@drawable/ic_function_next_20_36"
                    android:gravity="center_vertical|right"
                    android:text="空"
                    android:textColor="@color/gray_deep2"
                    android:textSize="14sp" />
            </LinearLayout>

            <include
                android:layout_width="match_parent"
                android:layout_height="0.3dp"
                layout="@layout/layout_line" />

            <LinearLayout
                android:id="@+id/rela_jobfavorite_favorite_enterprise"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/selector_item_bg"
                android:paddingBottom="10dp"
                android:paddingTop="10dp" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:drawableLeft="@drawable/ic_necessary_13_12"
                    android:drawablePadding="3dp"
                    android:text="@string/myresume_jobfavorite_favorite_enterprise"
                    android:textColor="@color/black"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/txt_jobfavorite_favorite_enterprise"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical|right"
                    android:singleLine="true"
                    android:ellipsize="end"
                    android:drawablePadding="10dp"
                    android:drawableRight="@drawable/ic_function_next_20_36"
                    android:gravity="center_vertical|right"
                    android:text="空"
                    android:textColor="@color/gray_deep2"
                    android:textSize="14sp" />
            </LinearLayout>

            <include
                android:layout_width="match_parent"
                android:layout_height="0.3dp"
                layout="@layout/layout_line" />

            <LinearLayout
                android:id="@+id/rela_jobfavorite_star"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/selector_item_bg"
                android:paddingBottom="10dp"
                android:paddingTop="10dp" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="12dp"
                    android:text="@string/myresume_jobfavorite_star"
                    android:textColor="@color/black"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/txt_jobfavorite_star"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical|right"
                    android:singleLine="true"
                    android:ellipsize="end"
                    android:drawablePadding="10dp"
                    android:drawableRight="@drawable/ic_function_next_20_36"
                    android:gravity="center_vertical|right"
                    android:text="空"
                    android:textColor="@color/gray_deep2"
                    android:textSize="14sp" />
            </LinearLayout>

            <include
                android:layout_width="match_parent"
                android:layout_height="0.3dp"
                layout="@layout/layout_line" />

            <LinearLayout
                android:id="@+id/rela_jobfavorite_starttime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/selector_item_bg"
                android:paddingBottom="10dp"
                android:paddingTop="10dp" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="12dp"
                    android:text="@string/myresume_jobfavorite_starttime"
                    android:textColor="@color/black"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/txt_jobfavorite_starttime"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical|right"
                    android:singleLine="true"
                    android:ellipsize="end"
                    android:drawablePadding="10dp"
                    android:drawableRight="@drawable/ic_function_next_20_36"
                    android:gravity="center_vertical|right"
                    android:text="空"
                    android:textColor="@color/gray_deep2"
                    android:textSize="14sp" />
            </LinearLayout>

            <include
                android:layout_width="match_parent"
                android:layout_height="0.3dp"
                layout="@layout/layout_line" />

            <LinearLayout
                android:id="@+id/rela_jobfavorite_haven_salary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/selector_item_bg"
                android:paddingBottom="10dp"
                android:paddingTop="10dp" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:drawableLeft="@drawable/ic_necessary_13_12"
                    android:drawablePadding="3dp"
                    android:text="@string/myresume_jobfavorite_haven_salary"
                    android:textColor="@color/black"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/txt_jobfavorite_haven_salary"
                    android:layout_width="match_parent"
                    android:layout_height="36dp"
                    android:layout_gravity="center_vertical|right"
                    android:gravity="center_vertical|right"
                    android:singleLine="true"
                    android:layout_marginRight="8dp"
                    android:layout_marginLeft="10dp"
                    android:paddingRight="2dp"
                    android:background="@drawable/ic_name_bg"
                    android:digits="1234567890."
                    android:hint="只能输入数字和“.”号"
                    android:textColor="@color/gray_deep2"
                    android:textSize="14sp" />
            </LinearLayout>

            <include
                android:layout_width="match_parent"
                android:layout_height="0.3dp"
                layout="@layout/layout_line" />

            <LinearLayout
                android:id="@+id/rela_jobfavorite_expect_salary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/selector_item_bg"
                android:paddingBottom="10dp"
                android:paddingTop="10dp" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:drawableLeft="@drawable/ic_necessary_13_12"
                    android:drawablePadding="3dp"
                    android:text="@string/myresume_jobfavorite_expect_salary"
                    android:textColor="@color/black"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/txt_jobfavorite_expect_salary"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical|right"
                    android:singleLine="true"
                    android:ellipsize="end"
                    android:drawablePadding="10dp"
                    android:drawableRight="@drawable/ic_function_next_20_36"
                    android:gravity="center_vertical|right"
                    android:text="空"
                    android:textColor="@color/gray_deep2"
                    android:textSize="14sp" />
            </LinearLayout>

            <include
                android:layout_width="match_parent"
                android:layout_height="0.3dp"
                layout="@layout/layout_line" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>
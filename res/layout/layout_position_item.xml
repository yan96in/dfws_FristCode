<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rela_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/selector_item_bg" >
    
<LinearLayout 
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentLeft="true"
    android:layout_centerVertical="true"
    android:padding="5dp"
    android:orientation="vertical">
    <TextView 
        android:id="@+id/txt_target_position_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:ellipsize="end"
        android:text="前厅服务员"
        android:textSize="18sp"
        android:textColor="@color/black"/>
    <TextView 
        android:id="@+id/txt_target_position_company"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:ems="@integer/txt_ems"
        android:text="杭州东方网升科技有限公司"
        android:textSize="14sp"
        android:textColor="@color/gray_deep2"/>
    <TextView 
        android:id="@+id/txt_target_position_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:ellipsize="end"
        android:text="2013-12-08"
        android:textSize="12sp"
        android:textColor="@color/gray_deep2"/>
</LinearLayout>

<LinearLayout 
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentRight="true"
    android:layout_centerVertical="true"
    android:gravity="right"
    android:orientation="vertical">
    <ImageView 
        android:id="@+id/iv_target_position_hot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:src="@drawable/ic_hot_35_36"
        android:contentDescription="@string/app_name"/>
    <TextView 
        android:id="@+id/txt_target_position_salary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:layout_marginRight="5dp"
        android:text="4000-5000"
        android:textSize="14sp"
        android:textColor="@color/yellow"/>
    <TextView 
        android:id="@+id/txt_target_position_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="5dp"
        android:text="浙江杭州"
        android:textSize="12sp"
        android:textColor="@color/gray_deep2"/>
</LinearLayout>
</RelativeLayout>

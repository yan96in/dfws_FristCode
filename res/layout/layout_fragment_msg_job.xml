<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <ListView
        android:id="@+id/msg_job_ListView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:cacheColorHint="#00000000"
        android:divider="@null"
        android:fadingEdgeLength="0dp"/>

    <LinearLayout
        android:id="@+id/line_msg_jobmsg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="gone" >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_job_mymessage"
            android:gravity="left|center_vertical" />

        <TextView
            android:id="@+id/t3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:text="订阅有惊喜，随时随地！"
            android:textSize="@dimen/font_size_16" />

        <TextView
            android:id="@+id/t1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:gravity="left|center_vertical"
            android:text="接收一手新鲜职位，不会错过好机会！"
            android:textSize="@dimen/font_size_16" />

        <TextView
            android:id="@+id/t2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:gravity="left|center_vertical"
            android:text="当前没有符合订阅条件的职位"
            android:textSize="@dimen/font_size_16"
            android:visibility="gone" />

        <Button
            android:id="@+id/but_jobmsg"
            android:layout_width="180dp"
            android:layout_height="50dp"
            android:layout_marginLeft="30dip"
            android:layout_marginRight="30dip"
            android:layout_marginTop="20dp"
            android:background="@drawable/selector_search_btn_bg"
            android:text="设置"
            android:textColor="@color/white"
            android:textSize="@dimen/font_size_22" />
    </LinearLayout>

</LinearLayout>